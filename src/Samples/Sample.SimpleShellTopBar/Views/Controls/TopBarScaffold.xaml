<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sb="clr-namespace:SimpleToolkit.SimpleButton;assembly=SimpleToolkit.SimpleButton"
    xmlns:controls="clr-namespace:Sample.SimpleShellTopBar.Views.Controls"
    x:Class="Sample.SimpleShellTopBar.Views.Controls.TopBarScaffold"
    
    x:Name="scaffold">

    <ContentView.Content>
        <Grid
            RowDefinitions="auto, *">
            <Grid
                x:Name="topBar"
                ColumnDefinitions="50, *, 50"
                Padding="0, 5"
                MinimumHeightRequest="60">
                <sb:SimpleButton
                    IsVisible="{Binding Source={x:Reference scaffold}, Path=IsBackButtonVisible, x:DataType={x:Type controls:TopBarScaffold}}"
                    VerticalOptions="Center" HorizontalOptions="Center"
                    HeightRequest="30" WidthRequest="30"
                    StrokeThickness="0"
                    Clicked="BackButtonClicked">
                    <Image
                        Source="arrow_left.png"
                        VerticalOptions="Center" HorizontalOptions="Center"
                        HeightRequest="20" WidthRequest="20" />
                </sb:SimpleButton>

                <ContentView
                    x:Name="titleContent"
                    Grid.Column="1" />
            </Grid>

            <ContentView
                x:Name="pageContent"
                Content="{Binding Source={x:Reference scaffold}, Path=PageContent, x:DataType={x:Type controls:TopBarScaffold}}"
                Grid.Row="1" />
        </Grid>
    </ContentView.Content>
</ContentView>
