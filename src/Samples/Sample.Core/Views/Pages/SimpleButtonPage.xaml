<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sb="clr-namespace:SimpleToolkit.SimpleButton;assembly=SimpleToolkit.SimpleButton"
    x:Class="Sample.Core.Views.Pages.SimpleButtonPage"
    Title="SimpleButton">

    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Center"
            Padding="20"
            Spacing="80">
            <sb:SimpleButton
                Clicked="StarButtonClicked"
                Background="Orange"
                HorizontalOptions="Center"
                StrokeShape="{RoundRectangle CornerRadius=6}">
                <HorizontalStackLayout Padding="12,10" Spacing="10">
                    <Image
                        Source="star.png"
                        VerticalOptions="Center"
                        HeightRequest="18" WidthRequest="18"/>
                    <Label
                        Text="Star this repo" TextColor="White"
                        FontAttributes="Bold"
                        VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </sb:SimpleButton>

            <sb:SimpleButton
                Clicked="StarButtonClicked"
                Background="Orange"
                HorizontalOptions="Center"
                StrokeShape="{RoundRectangle CornerRadius=6}">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup>
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter
                                        Property="Background" 
                                        Value="OrangeRed"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter
                                        Property="Background" 
                                        Value="DarkOrange"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
                <HorizontalStackLayout Padding="12,10" Spacing="10">
                    <Image
                        Source="star.png"
                        VerticalOptions="Center"
                        HeightRequest="18" WidthRequest="18"/>
                    <Label
                        Text="Star this repo" TextColor="White"
                        FontAttributes="Bold"
                        VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </sb:SimpleButton>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>